<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="General Settings">
        <SwitchPreference
            app:defaultValue="true"
            app:key="randomize_switch"
            app:title="Shake to Randomize" />
        <SwitchPreference
            app:defaultValue="true"
            app:key="hidden_files_switch"
            app:title="Show hidden files" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Customization Settings">
        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            app:title="Background Color"
            app:cpv_showAlphaSlider="true"
            app:key="background_color"
            app:defaultValue="0x000000"/>
        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            app:title="Secondary Color"
            app:cpv_showAlphaSlider="true"
            app:key="secondary_color" />
        <Preference
            app:key="reset_customization"
            app:title="Reset Customization"
            app:icon="@drawable/ic_menu_delete"/>
    </PreferenceCategory>

</PreferenceScreen>